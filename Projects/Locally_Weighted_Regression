        "import numpy as np\n",
        "from sklearn.utils.validation import check_X_y, check_array, check_is_fitted\n",
        "from sklearn import linear_model\n",
        "lm = linear_model.Ridge(alpha=0.001)\n"
      ],
      "metadata": {
        "id": "c7P692ibFPlq"
      },
      "execution_count": null,
      "outputs": []
